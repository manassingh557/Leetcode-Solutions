/*
// Definition for a Node.
class Node {
public:
    int val;
    vector<Node*> children;

    Node() {}

    Node(int _val) {
        val = _val;
    }

    Node(int _val, vector<Node*> _children) {
        val = _val;
        children = _children;
    }
};
*/

class Solution {
public:
    vector<int> postorder(Node* root) {
        vector<int> ans;
        solve(root,ans);    //Calling function to compute ans
        return ans;
    }
    void solve(Node* root,vector<int>&ans)
    {
        if(!root)   //If root is NULL then simply return
            return;
        for(int i=0;i<root->children.size();i++)
            solve(root->children[i],ans);   //Recursively call root's children 
        ans.push_back(root->val);   //Push root's value after calling children to ans
    }
};
